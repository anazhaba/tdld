---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta property="og:description" content={description} />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <style is:global>
      @font-face {
        font-family: "Gilroy";
        src: url("/fonts/Gilroy-Regular.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "Gilroy-black";
        src: url("/fonts/Gilroy-Black.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "Gilroy-bold";
        src: url("/fonts/Gilroy-Bold.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      * {
        font-family: Gilroy;
      }
      :root {
        --color-black: #1d1e18;
        --color-bg: #f0f7da;
        --color-s-green-100: #e9f29c;
        --color-s-green-200: #c3ea4f;
        --color-s-green-300: #7fb069;
        --color-s-green-400: #4d6d46;
        --color-s-green-500: #364d2e;
        /* Основной цвет */
        --color-main-green: #a7d129;

        /* Дополнительные зеленые оттенки */
        --color-green-100: #d4e89b; /* Светло-зеленый */
        --color-green-200: #b8d768; /* Насыщенный зеленый */
        --color-green-300: #a9d241; /* Ярко-зеленый */
        --color-green-400: #85a923; /* Темно-зеленый */
        --color-green-450: #799826; /* Темно-зеленый */
        --color-green-500: #71901d; /* Темно-зеленый */

        /* Дополнительные природные цвета */
        --color-water-blue-100: #cce4f6; /* Светлый голубой */
        --color-water-blue-200: #99c9ed; /* Голубой */
        --color-water-blue-300: #66afe3; /* Насыщенный голубой */

        --color-earth-brown-100: #e5c8b5; /* Светлый коричневый */
        --color-earth-brown-200: #d1a689; /* Коричневый */
        --color-earth-brown-300: #bd835c; /* Насыщенный коричневый */

        --color-sun-yellow-100: #fff4a3; /* Светлый желтый */
        --color-sun-yellow-200: #ffea66; /* Желтый */
        --color-sun-yellow-300: #ffde29; /* Насыщенный желтый */

        /* Нейтральные цвета */
        --color-neutral-100: #f5f5f5; /* Очень светлый серый */
        --color-neutral-200: #e0e0e0; /* Светлый серый */
        --color-neutral-300: #cccccc; /* Нейтральный серый */
      }
      body {
        margin: 0;
        padding: 0;
        background-color: var(--color-bg);
      }
      .main--wrapper {
        display: grid;
        grid-template-areas:
          "header"
          "content"
          "footer";
        grid-template-rows: auto 1fr auto;
        min-height: 100vh;
      }
    </style>
    <div class="main--wrapper">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>

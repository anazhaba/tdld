---
import Header from "../components/Header.astro";
import Meta from "../components/Meta.astro";
import Footer from "../components/Footer.astro";
import "../components/transitions.css";
import "../components/fade.css";
import { ClientRouter } from "astro:transitions";

interface Props {
  subtitle?: string;
  title: string;
  description: string;
  icon?: string;
}

const { title, description, subtitle, icon }: Props = Astro.props;
---

<html lang="ru">
  <head>
    <ClientRouter />
    <script src="../components/theme.js"></script>

    <style>
      html {
        transition: 0.5s;
        visibility: hidden;
        background-color: #fefffd;
        color: #1d1e18;
      }
      @media (prefers-color-scheme: dark) {
        html {
          background-color: #1d1f21;
          color: #eeeeee;
        }
      }
      :root {
        --color-select: rgba(0, 255, 98, 0.566);
        --color-select-text: rgb(52, 52, 52);
        --color-text-title: #fefffd;
        --color-title: #1d1e18;
        --color-black: #1d1e18;
        --color-bg: #fefffd;
        --color-note-text: #3b3b3b;
        --color-green-500: #2d7331;
        --color-green-400: #328036;
        --color-green-300: #388e3c;
        --color-green-200: #4caf50;
        --color-green-100: #a5d6a7;
        --color-accent: #ffb300;
        --color-accent-hover: #ff9900;
        --color-gray-100: #bdbdbd;
        --color-white: #f5f5f5;
      }
      [data-theme="dark"] {
        --color-select: rgba(0, 255, 98, 0.39);
        --color-select-text: white;
        --color-text-title: #fefffd;
        --color-title: #fefffd;
        --color-black: #18191a;
        --color-bg: #1d1f21;
        --color-note-text: #eeeeee;
        --color-green-500: #237a26;
        --color-green-400: #2a9430;
        --color-green-300: #38a343;
        --color-green-200: #56c268;
        --color-green-100: #9ee1a7;
        --color-accent: #ffa000;
        --color-accent-hover: #ff8500;
        --color-gray-100: #757575;
        --color-white: #232425;
      }
    </style>

    <Meta {title} {subtitle} description={description} />
    <meta charset="UTF-8" />
    <meta property="og:type" content="website" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content="../assets/images/icon2.webp" />
    <meta
      property="og:image:secure_url"
      content="../assets/images/icon2.webp"
    />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:site_name" content="Toadland" />
    <meta property="og:image:width" content="1700" />
    <meta property="og:image:height" content="1300" />
    <meta property="og:image:alt" content="logoImage" />
    <meta property="og:locale" content="ru_RU" />
    <meta
      name="keywords"
      content="Тодленд, toadland, тод ленд, тоад ленд, toad land, тоад land, Тод land, майнкрафт сервер, приватный сервер minecraft, mineacraft toadland, minecraft, майнкрафт, сервер майнкрафт, сервер с жабами, майнкрафт с жабами"
    />
  </head>
  <body data-astro-transition="fade">
    <style is:global>
      ::selection {
        background-color: var(--color-select);
        color: var(--color-select-text);
      }

      * {
        font-family: gilroy;
        -webkit-tap-highlight-color: transparent;
      }
      :root {
        --color-black: #1d1e18;
        --color-bg: #fefffd;
        --color-note-text: #3b3b3b;
        --color-green-500: #2d7331;
        --color-green-400: #328036;
        --color-green-300: #388e3c;
        --color-green-200: #4caf50;
        --color-green-100: #a5d6a7;
        --color-accent: #ffb300;
        --color-accent-hover: #ff9900;
        --color-gray-100: #bdbdbd;
        --color-white: #f5f5f5;
        --thin: 100;
        --ultra-light: 200;
        --light: 300;
        --regular: 400;
        --medium: 500;
        --semibold: 600;
        --bold: 700;
        --extrabold: 800;
        --black: 900;
      }

      body {
        margin: 0 auto;
        padding: 0;
        background-color: var(--color-bg);
      }
      .main--wrapper {
        display: grid;
        grid-template-areas:
          "header"
          "content"
          "footer";
        grid-template-rows: auto 1fr auto;
        min-height: 100vh;
      }

      .page-icon {
        margin-left: 10px;
        width: 28px;
        height: 28px;
        @media (max-width: 540px) {
          display: none;
        }
      }
      /* Webkit-браузеры (Chrome, Edge, Safari) */
      ::-webkit-scrollbar {
        width: 4px; /* Узкий скроллбар */
        height: 4px;
        background: transparent; /* Фон по умолчанию */
      }

      ::-webkit-scrollbar-thumb {
        background-color: rgba(0, 0, 0, 0.3); /* Полупрозрачный темный цвет */
        border-radius: 10px; /* Закругленные края */
        transition:
          background-color 0.2s,
          width 0.2s; /* Плавное изменение ширины и цвета */
      }

      ::-webkit-scrollbar-thumb:hover {
        background-color: rgba(0, 0, 0, 0.6); /* Более заметный цвет */
        width: 8px; /* Расширение при наведении */
      }

      ::-webkit-scrollbar-track {
        background: transparent; /* Скрытие трека для минимализма */
      }

      /* Firefox */
      * {
        scrollbar-width: thin; /* Узкий скроллбар */
        scrollbar-color: rgba(0, 0, 0, 0.3) transparent; /* Цвет ползунка и фона */
      }

      *::-webkit-scrollbar-thumb:hover {
        scrollbar-width: auto; /* Немного шире */
        scrollbar-color: rgba(0, 0, 0, 0.6) transparent; /* Более заметный при наведении */
      }

      /* Microsoft Edge (старая версия) */
      @supports (-ms-overflow-style: none) {
        .scrollable {
          -ms-overflow-style: -ms-autohiding-scrollbar; /* Узкий и исчезающий */
        }
      }

      /* Пример для более старых версий IE (устарело) */
      .scrollable {
        overflow-y: auto; /* Стандартное поведение */
        scrollbar-face-color: rgba(0, 0, 0, 0.3); /* Цвет ползунка */
        scrollbar-track-color: transparent; /* Цвет фона трека */
      }
    </style>

    <div id="content" class="main--wrapper">
      <Header {title} {subtitle} icon={icon} />
      <slot />
      <Footer />
    </div>
  </body>
</html>

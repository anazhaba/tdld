    <h1 class="rule-wrapper-title">{title}</h1>

    <div class="rules-list-container">
      <div class="rules-list-block">
        <h1 id="images" class="rules-list-block-title">title</h1>
        <p class="rules-list-block-text">Text</p>
      </div>
    </div>
  </div>
</Layout>
<style>
  .rule-wrapper {
    max-width: 1440px;
    margin: 0 auto;
    width: 100%;
  }
  .list-link-icon {
    fill: var(--color-green-200);
    width: 24px;
    height: 24px;
  }
  .rule-wrapper-title {
    text-align: center;
  }
  .rules-list-container {
    width: 100%;
    display: flex;
    flex-direction: column;
  }
  .rule-wrapper-header {
    position: sticky;
    margin: 0 auto;
    text-align: center;
    width: 100%;
    background-color: var(--color-green-400);
  }
  .header-links-list {
    gap: 10px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .header-links-item {
    background-color: var(--color-green-500);
    align-items: center;
  }
  .header-links-item-link {
    letter-spacing: 1px;
    padding-left: 5px;
    padding-right: 5px;
    font-size: 18px;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-self: center;
    color: white;
    text-decoration: none;
    font-family: gilroy-black;
  }
</style>

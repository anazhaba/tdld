---
import Layout from "../layouts/Layout.astro";
import { getFiles } from "../utils/getFiles";
const directory = "./public/mods";
const files = getFiles(directory);
const title = "Toadland";
const subtitle = "Моды";
const description =
  "Приватный minecraft сервер 1.20.1 с модами и дружелюбной атмосферой! | Сборка модов";
const pageIcon = "/icons/files.svg";
---

<Layout title={title} {subtitle} icon={pageIcon} description={description}>
  <div class="mods-wrapper">
    <div class="mods-container">
      <h1 class="mods-heading">Available Mods for Download</h1>
      <ul class="mods-list">
        {
          files.map((file) => (
            <li class="mods-list-item">
              <a class="mods-download-link" href={file.path}>
                {file.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</Layout>
<style>
  .mods-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    font-family: Arial, sans-serif;
  }

  .mods-heading {
    text-align: center;
    font-size: 2rem;
    color: var(--color-primary, #333);
    margin-bottom: 20px;
  }

  .mods-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mods-list-item {
    background: var(--color-secondary, #f5f5f5);
    border: 1px solid var(--color-border, #ddd);
    padding: 15px;
    margin-bottom: 10px;
    border-radius: 8px;
  }

  .mods-list-item:hover {
    background: var(--color-accent, #e0e0e0);
    transform: translateY(-2px);
  }

  .mods-download-link {
    text-decoration: none;
    color: var(--color-link, #007bff);
    font-size: 1.2rem;
  }

  .mods-download-link:hover {
    text-decoration: underline;
  }
</style>

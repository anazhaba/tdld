---
import MainPage from "../components/MainPage.astro";
import MainTest from "../components/MainTest.astro";
import Test2 from "../components/Test2.astro";
import Layout from "../layouts/Layout.astro";
import { fade } from "astro:transitions";
import { ClientRouter } from "astro:transitions";
const title = "Toadland";
const subtitle = "Главная";
const description =
  "Добро пожаловать! Все важные новости и ссылки для быстрого старта в одном месте.";
const pageIcon = "/icons/love.svg";
---

<Layout
  data-astro-transition="fade"
  title={title}
  {subtitle}
  icon={pageIcon}
  description={description}
>
  <main data-astro-transition="animate" class="main-page-container">
    <Test2 slot="MainTest" />
  </main>
</Layout>

<style>
  .main-page-container {
    position: relative;
    margin: 0 auto;
    max-width: 1440px;
  }
  body {
    margin: 0;
    padding: 0;
  }
</style>

<header class="main--header">
  <button class="menu-open-button">Open Menu</button>
</header>

<div class="unique-menu-overlay" id="uniqueMenuOverlay"></div>
<div class="unique-menu" id="uniqueMenu">
  <div class="unique-menu-top" id="uniqueMenuTop">
    <p id="uniqueSplashText"></p>
  </div>
  <div class="unique-menu-content">
    <div class="unique-menu-links">
      <a href="#">Link 1</a>
      <a href="#">Link 2</a>
      <a href="#">Link 3</a>
      <a href="#">Link 4</a>
      <a href="#">Link 5</a>
      <a href="#">Link 6</a>
      <a href="#">Link 7</a>
      <a href="#">Link 8</a>
      <a href="#">Link 9</a>
    </div>
    <button class="unique-menu-close-button" id="uniqueMenuCloseButton"
      >Close</button
    >
  </div>
</div>

<style>
  .main--header {
    grid-area: header;
    background-color: #4caf50;
    color: white;
    text-align: center;
    padding: 1rem;
  }

  .content-container {
    padding: 2rem;
  }

  .menu-open-button {
    padding: 1rem 2rem;
    background-color: #4caf50;
    color: white;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .unique-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(255, 255, 255);
    z-index: 999;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    visibility: hidden;
  }

  .unique-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    z-index: 1000;
    overflow: hidden;
    visibility: hidden;
    background-color: rgba(255, 255, 255, 0);
    transition:
      visibility 0s linear 0.5s,
      transform 0.5s ease-in-out;
  }

  .unique-menu-top {
    height: 50%;
    background-color: #4caf50;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    border-bottom-left-radius: 10%;
    border-bottom-right-radius: 10%;
    transition: transform 0.5s ease-in-out;
    transform: translateY(-100%);
  }

  .unique-menu-content {
    padding: 2rem;
    background-color: rgb(255, 255, 255);
    flex-grow: 1;
    transition: transform 0.5s ease-in-out;
    transform: translateY(100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow-y: auto;
    margin-top: 2rem;
  }

  .unique-menu-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    width: 100%;
    max-width: 600px;
  }

  .unique-menu-links a {
    padding: 1rem;
    background-color: #4caf50;
    color: white;
    text-align: center;
    text-decoration: none;
    border-radius: 5px;
  }

  .unique-menu-close-button {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    padding: 1rem 2rem;
    background-color: #4caf50;
    color: white;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  /* Когда меню открыто */
  .unique-menu.open {
    visibility: visible;
    transition: visibility 0s linear 0s;
  }

  .unique-menu.open .unique-menu-top {
    transform: translateY(0);
  }

  .unique-menu.open .unique-menu-content {
    transform: translateY(0);
  }

  .unique-menu.closing {
    visibility: visible;
    transition:
      visibility 0s linear 0.5s,
      transform 0.5s ease-in-out;
  }

  .unique-menu.closing .unique-menu-top {
    transform: translateY(-100%);
  }

  .unique-menu.closing .unique-menu-content {
    transform: translateY(100%);
  }

  .unique-menu-overlay.open {
    opacity: 1;
    visibility: visible;
  }

  .unique-menu-overlay.closing {
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.5s ease-in-out;
  }

  /* Запрещаем прокрутку фона */
  body.no-scroll {
    overflow: hidden;
  }

  /* Адаптивные стили */
  @media (max-width: 768px) {
    .unique-menu-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .unique-menu-links {
      grid-template-columns: 1fr;
    }
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menu = document.getElementById("uniqueMenu");
    const menuOverlay = document.getElementById("uniqueMenuOverlay");
    const openButton = document.querySelector(".menu-open-button");
    const closeButton = document.getElementById("uniqueMenuCloseButton");
    const menuTop = document.getElementById("uniqueMenuTop");
    const splashText = document.getElementById("uniqueSplashText");
    const splashPhrases = [
      "Welcome to our site!",
      "Explore the menu!",
      "Enjoy your stay!",
      "Check out our features!",
    ];

    // Helper function to get a random phrase
    function getRandomPhrase() {
      return splashPhrases[Math.floor(Math.random() * splashPhrases.length)];
    }

    // Open menu
    function openMenu() {
      splashText.textContent = getRandomPhrase();
      menu.classList.remove("closing");
      menuOverlay.classList.remove("closing");
      menu.classList.add("open");
      menuOverlay.classList.add("open");
      document.body.classList.add("no-scroll");
    }

    // Close menu
    function closeMenu() {
      menu.classList.add("closing");
      menuOverlay.classList.add("closing");
      setTimeout(() => {
        menu.classList.remove("open");
        menuOverlay.classList.remove("open");
        setTimeout(() => {
          menu.classList.remove("closing");
          menuOverlay.classList.remove("closing");
          document.body.classList.remove("no-scroll");
        }, 100); // Дождемся завершения анимации закрытия блоков
      }, 100); // Дождемся завершения анимации затухания фона
    }

    // Event listeners
    openButton.addEventListener("click", openMenu);
    closeButton.addEventListener("click", closeMenu);
    menuTop.addEventListener("click", closeMenu);
  });
</script>

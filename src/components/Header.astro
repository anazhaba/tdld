<style>
  .header-logo::selection,
  .header-title::selection,
  .header-title-link-back::selection,
  .page-icon::selection,
  .unique-menu-links > a > span::selection {
    background: initial;
    color: inherit;
  }

  .main--header {
    grid-area: header;
    background-color: var(--color-green-400);
    text-align: center;
    width: 100%;
    height: auto;
  }
  .header-title-block {
    max-width: 1440px;
    margin: 0 auto;
    flex-wrap: wrap;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    @media (max-width: 540px) {
      text-align: center;
      flex-direction: row;
      justify-content: center;
    }
    @media (max-width: 298px) {
      text-align: center;
      flex-direction: column;
      justify-content: center;
    }
  }
  .header-title-dynamic-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    @media (max-width: 540px) {
      text-align: center;
      flex-direction: row;
      justify-content: left;
    }
    @media (max-width: 298px) {
      text-align: center;
      flex-direction: row;
      justify-content: center;
    }
  }
  .header-title-link-back {
    align-self: center;
    transition: 0.2s;
    margin: 0px 0px 0px 1rem;
    color: var(--color-bg);
    padding: 0.5rem;
    text-decoration: none;
    @media (max-width: 540px) {
      text-align: center;
      margin: 0;
    }
    @media (max-width: 448px) {
      margin: 0;
      font-size: 24px;
      background-color: inherit;
    }
    @media (max-width: 288px) {
      font-size: 18px;
    }
  }
  .header-logo {
    height: 60px;
  }
  .header-title-link-back:hover {
    transform: scale(1.01);
  }
  .header-title {
    color: var(--color-text-title);
    letter-spacing: 1px;
    font-family: Gilroy-black;
    font-size: 44px;
    margin: 0px 0px 0px 1rem;
    padding: 5px;
    @media (max-width: 540px) {
      text-align: center;
      margin: 0;
    }
    @media (max-width: 448px) {
      font-size: 24px;
    }
    @media (max-width: 288px) {
      font-size: 18px;
    }
  }

  .menu-open-button-icon {
    width: 28px;
    height: 28px;
    fill: var(--color-green-100);
    transition: all 0.3s ease;
    background-color: var(--color-green-500);
    padding: 0.5rem;
    border-radius: 5px;
  }
  .menu-open-button-icon:hover {
    fill: var(--color-green-100);
    background-color: var(--color-green-500);
  }
  .menu-open-button {
    color: var(--color-s-green-300);
    cursor: pointer;
    padding: 0;
    border: 0;
    margin: 0px 2rem 0px 0px;
    @media (max-width: 528px) {
      margin: 10px;
    }
  }
  .unique-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    visibility: hidden;
    background-color: var(--color-bg);
  }

  .unique-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    z-index: 1000;
    overflow: hidden;
    visibility: hidden;
    transition:
      visibility 0s linear 0.2s,
      transform 0.2s ease-in-out;
  }

  .unique-menu-top {
    height: 35%;
    background-color: var(--color-green-400);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    border-bottom-left-radius: 5%;
    border-bottom-right-radius: 5%;
    transition: transform 0.2s ease-in-out;
    transform: translateY(-100%);
    @media (max-width: 768px) {
      height: 35%;
    }
    @media (max-width: 368px) {
      height: 20%;
    }
  }
  #uniqueSplashText::selection {
    background: inherit;
    color: initial;
  }
  #uniqueSplashText {
    color: var(--color-text-title);
    font-family: Gilroy-black;
    letter-spacing: 3px;
    text-align: center;
    padding: 10px 50px 50px 50px;
    margin: 0;
    font-size: 3rem;
    position: relative;
    transition: all 0.3s ease;
    @media (max-width: 768px) {
      font-size: 2rem;
      padding: 40px;
    }
    @media (max-width: 468px) {
      font-size: 1.5rem;
      padding: 20px;
    }
  }
  .unique-menu-content {
    padding: 2rem;
    background-color: var(--color-s-green-100);
    flex-grow: 1;
    transition: transform 0.2s ease-in-out;
    transform: translateY(100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow-y: auto;
  }

  .unique-menu-links {
    /* background-color: var(--color-bg);*/
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    width: 100%;
    max-width: 600px;
    @media (max-width: 768px) {
      grid-template-columns: repeat(2, 1fr);
    }
    @media (max-width: 480px) {
      margin-top: 7rem;
      grid-template-columns: 1fr;
    }
  }
  .unique-menu-links a {
    font-size: 1.5rem;
    font-family: Gilroy-bold;
    display: flex;
    align-items: center;
    padding: 1rem;
    background-color: var(--color-green-300);
    color: white;
    text-align: center;
    text-decoration: none;
    border-radius: 15px;
    text-transform: uppercase;
    position: relative;
  }
  .unique-menu-links a:hover {
    background-color: var(--color-green-400);
    transition: 0.2s;
  }
  .unique-menu-links a:hover svg {
    background-color: var(--color-green-500);
    transition: 0.2s;
  }
  .unique-menu-links svg {
    background-color: var(--color-green-400);
    padding: 0.5rem;
    border-radius: 10px;
    width: 24px;
    height: 24px;
    fill: var(--color-green-100);
  }

  .unique-menu-links span {
    flex: 1;
    text-align: center;
    letter-spacing: 2px;
    font-family: Gilroy-Black;
  }
  .unique-menu-close-button {
    border: none;
    cursor: pointer;
    position: absolute;
    top: 0;
    right: 0;
  }
  .unique-menu-close-button > svg {
    margin: 5px;
    width: 34px;
    height: 34px;
    fill: var(--color-green-100);
  }
  .unique-menu.open {
    visibility: visible;
    transition: visibility 0s linear 0s;
  }

  .unique-menu.open .unique-menu-top {
    transform: translateY(0);
  }

  .unique-menu.open .unique-menu-content {
    background-color: var(--color-bg);
    transform: translateY(0);
  }

  .unique-menu.closing {
    visibility: visible;
    transition:
      visibility 0s linear 0.2s,
      transform 0.2s ease-in-out;
  }

  .unique-menu.closing .unique-menu-top {
    transform: translateY(-100%);
  }

  .unique-menu.closing .unique-menu-content {
    transform: translateY(100%);
  }

  .unique-menu-overlay.open {
    opacity: 1;
    visibility: visible;
  }

  .unique-menu-overlay.closing {
    background-color: var(--color-bg);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease-in-out;
  }

  body.no-scroll {
    overflow: hidden;
  }

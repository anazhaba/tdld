<style>
  .main--header {
    grid-area: header;
    background-color: var(--color-green-100);
    text-align: center;
    width: 100%;
    height: auto;
  }
  .header-title-block {
    flex-wrap: wrap;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    @media (max-width: 378px) {
      flex-direction: column;
      justify-content: center;
    }
  }
  .header-title {
    font-size: 48px;
    margin: 0px 0px 0px 2rem;
    @media (max-width: 378px) {
      margin: 0;
      font-size: 28px;
    }
  }

  .menu-open-button-icon {
    width: 28px;
    height: 28px;
    fill: var(--color-green-100);
    transition: all 0.3s ease;
    background-color: var(--color-green-200);
    padding: 0.5rem; /* Отступы вокруг иконки */
    border-radius: 5px; /* Скругление углов фона иконки */
  }
  .menu-open-button-icon:hover {
    fill: var(--color-green-100);
    background-color: var(--color-green-300);
  }
  .menu-open-button {
    color: var(--color-s-green-300);
    cursor: pointer;
    margin: 0px 2rem 0px 0px;
    @media (max-width: 378px) {
      margin: 0;
    }
  }
  .unique-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    visibility: hidden;
  }

  .unique-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    z-index: 1000;
    overflow: hidden;
    visibility: hidden;
    transition:
      visibility 0s linear 0.2s,
      transform 0.2s ease-in-out;
  }

  .unique-menu-top {
    height: 50%;
    background-color: var(--color-green-100);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    border-bottom-left-radius: 5%;
    border-bottom-right-radius: 5%;
    transition: transform 0.2s ease-in-out;
    transform: translateY(-100%);
    @media (max-width: 768px) {
      height: 40%;
    }
  }

  .unique-menu-content {
    padding: 2rem;
    background-color: var(--color-bg);
    flex-grow: 1;
    transition: transform 0.2s ease-in-out;
    transform: translateY(100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow-y: auto;
  }

  .unique-menu-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    width: 100%;
    max-width: 600px;
    @media (max-width: 768px) {
      grid-template-columns: repeat(2, 1fr);
    }
    @media (max-width: 480px) {
      margin-top: 7rem;
      grid-template-columns: 1fr;
    }
  }
  .unique-menu-links a {
    display: flex;
    align-items: center;
    padding: 1rem;
    background-color: var(--color-green-300);
    color: white;
    text-align: center;
    text-decoration: none;
    border-radius: 15px;
    text-transform: uppercase;
    position: relative;
  }
  .unique-menu-links svg {
    margin-right: 0.5rem;
    background-color: var(--color-green-400);
    padding: 0.5rem; /* Отступы вокруг иконки */
    border-radius: 10px; /* Скругление углов фона иконки */
    width: 24px;
    height: 24px;
    fill: var(--color-green-100);
  }

  .unique-menu-links span {
    flex: 1;
    text-align: left;
    width: auto;
    letter-spacing: 1px;
  }
  .unique-menu-close-button {
    position: absolute;
    right: 0;
    bottom: 0;
    color: red;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  /* Когда меню открыто */
  .unique-menu.open {
    visibility: visible;
    transition: visibility 0s linear 0s;
  }

  .unique-menu.open .unique-menu-top {
    transform: translateY(0);
  }

  .unique-menu.open .unique-menu-content {
    transform: translateY(0);
  }

  .unique-menu.closing {
    visibility: visible;
    transition:
      visibility 0s linear 0.2s,
      transform 0.2s ease-in-out;
  }

  .unique-menu.closing .unique-menu-top {
    transform: translateY(-100%);
  }

  .unique-menu.closing .unique-menu-content {
    transform: translateY(100%);
  }

  .unique-menu-overlay.open {
    opacity: 1;
    visibility: visible;
  }

  .unique-menu-overlay.closing {
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease-in-out;
  }

  /* Запрещаем прокрутку фона */
  body.no-scroll {
    overflow: hidden;
  }

  /* Адаптивные стили */

  @media (max-width: 480px) {
    .unique-menu-links {
    }
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menu = document.getElementById("uniqueMenu");
    const menuOverlay = document.getElementById("uniqueMenuOverlay");
    const openButton = document.querySelector(".menu-open-button");
    const closeButton = document.getElementById("uniqueMenuCloseButton");
    const menuTop = document.getElementById("uniqueMenuTop");
    const splashText = document.getElementById("uniqueSplashText");
    const splashPhrases = ["Привет1", "Привет2", "Привет3", "Привет4"];

    // Helper function to get a random phrase
    function getRandomPhrase() {
      return splashPhrases[Math.floor(Math.random() * splashPhrases.length)];
    }

    // Open menu
    function openMenu() {
      splashText.textContent = getRandomPhrase();
      menu.classList.remove("closing");
      menuOverlay.classList.remove("closing");
      menu.classList.add("open");
      menuOverlay.classList.add("open");
      document.body.classList.add("no-scroll");
    }

    // Close menu
    function closeMenu() {
      menu.classList.add("closing");
      menuOverlay.classList.add("closing");
      setTimeout(() => {
        menu.classList.remove("open");
        menuOverlay.classList.remove("open");
        setTimeout(() => {
          menu.classList.remove("closing");
          menuOverlay.classList.remove("closing");
          document.body.classList.remove("no-scroll");
        }, 100); // Дождемся завершения анимации закрытия блоков
      }, 100); // Дождемся завершения анимации затухания фона
    }

    // Event listeners
    openButton.addEventListener("click", openMenu);
    closeButton.addEventListener("click", closeMenu);
    menuTop.addEventListener("click", closeMenu);
  });


---
const heading = "Главная";
---

<header class="main--header">
  <span class="header-title-block"
    ><h1 class="header-title">{heading}</h1>
    <a class="menu-open-button">
      <svg
        class="menu-open-button-icon"
        xmlns="http://www.w3.org/2000/svg"
        height="48px"
        viewBox="0 -960 960 960"
        width="48px"
        ><path
          d="M150-240q-12.75 0-21.37-8.68-8.63-8.67-8.63-21.5 0-12.82 8.63-21.32 8.62-8.5 21.37-8.5h660q12.75 0 21.38 8.68 8.62 8.67 8.62 21.5 0 12.82-8.62 21.32-8.63 8.5-21.38 8.5H150Zm0-210q-12.75 0-21.37-8.68-8.63-8.67-8.63-21.5 0-12.82 8.63-21.32 8.62-8.5 21.37-8.5h660q12.75 0 21.38 8.68 8.62 8.67 8.62 21.5 0 12.82-8.62 21.32-8.63 8.5-21.38 8.5H150Zm0-210q-12.75 0-21.37-8.68-8.63-8.67-8.63-21.5 0-12.82 8.63-21.32 8.62-8.5 21.37-8.5h660q12.75 0 21.38 8.68 8.62 8.67 8.62 21.5 0 12.82-8.62 21.32-8.63 8.5-21.38 8.5H150Z"
        ></path></svg
      >
    </a></span
  >
</header>

<div class="unique-menu-overlay" id="uniqueMenuOverlay"></div>
<div class="unique-menu" id="uniqueMenu">
  <div class="unique-menu-top" id="uniqueMenuTop">
    <p id="uniqueSplashText"></p>
  </div>
  <div class="unique-menu-content">
    <div class="unique-menu-links">
      <a href="#">Покупка</a>
      <a href="#">Вики</a>
      <a href="#">Правила</a>
      <a href="#">Моды</a>
      <a href="#">Разное</a>
      <a href="#">О нас</a>
      <a href="#">maybe soon</a>
    </div>
    <a class="unique-menu-close-button" id="uniqueMenuCloseButton">X</a>
  </div>
</div>
<style>
  .main--header {
    grid-area: header;
    background-color: var(--color-green-100);
    text-align: center;
    width: 100%;
    height: auto;
  }
  .header-title-block {
    flex-wrap: wrap;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    @media (max-width: 378px) {
      flex-direction: column;
      justify-content: center;
    }
  }
  .header-title {
    font-size: 48px;
    margin: 0px 0px 0px 2rem;
    @media (max-width: 378px) {
      margin: 0;
      font-size: 28px;
    }
  }

  .menu-open-button-icon {
    fill: var(--color-green-400);
    transition: all 0.5s ease;
  }
  .menu-open-button {
    color: var(--color-green-300);
    cursor: pointer;
    margin: 0px 2rem 0px 0px;
    @media (max-width: 378px) {
      margin: 0;
    }
  }
  .unique-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(255, 255, 255);
    z-index: 999;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    visibility: hidden;
  }

  .unique-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    z-index: 1000;
    overflow: hidden;
    visibility: hidden;
    background-color: rgba(255, 255, 255, 0);
    transition:
      visibility 0s linear 0.2s,
      transform 0.2s ease-in-out;
  }

  .unique-menu-top {
    height: 50%;
    background-color: #4caf50;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    border-bottom-left-radius: 5%;
    border-bottom-right-radius: 5%;
    transition: transform 0.2s ease-in-out;
    transform: translateY(-100%);
    @media (max-width: 768px) {
      height: 40%;
    }
  }

  .unique-menu-content {
    padding: 2rem;
    background-color: rgb(255, 255, 255);
    flex-grow: 1;
    transition: transform 0.2s ease-in-out;
    transform: translateY(100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow-y: auto;
  }

  .unique-menu-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    width: 100%;
    max-width: 600px;
    @media (max-width: 768px) {
      grid-template-columns: repeat(2, 1fr);
    }
    @media (max-width: 480px) {
      margin-top: 7rem;
      grid-template-columns: 1fr;
    }
  }
  .unique-menu-links a {
    padding: 1rem;
    background-color: #4caf50;
    color: white;
    text-align: center;
    text-decoration: none;
    border-radius: 15px;
  }

  .unique-menu-close-button {
    position: absolute;
    right: 0;
    bottom: 0;
    color: red;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  /* Когда меню открыто */
  .unique-menu.open {
    visibility: visible;
    transition: visibility 0s linear 0s;
  }

  .unique-menu.open .unique-menu-top {
    transform: translateY(0);
  }

  .unique-menu.open .unique-menu-content {
    transform: translateY(0);
  }

  .unique-menu.closing {
    visibility: visible;
    transition:
      visibility 0s linear 0.2s,
      transform 0.2s ease-in-out;
  }

  .unique-menu.closing .unique-menu-top {
    transform: translateY(-100%);
  }

  .unique-menu.closing .unique-menu-content {
    transform: translateY(100%);
  }

  .unique-menu-overlay.open {
    opacity: 1;
    visibility: visible;
  }

  .unique-menu-overlay.closing {
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease-in-out;
  }

  /* Запрещаем прокрутку фона */
  body.no-scroll {
    overflow: hidden;
  }

  /* Адаптивные стили */

  @media (max-width: 480px) {
    .unique-menu-links {
    }
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menu = document.getElementById("uniqueMenu");
    const menuOverlay = document.getElementById("uniqueMenuOverlay");
    const openButton = document.querySelector(".menu-open-button");
    const closeButton = document.getElementById("uniqueMenuCloseButton");
    const menuTop = document.getElementById("uniqueMenuTop");
    const splashText = document.getElementById("uniqueSplashText");
    const splashPhrases = ["Привет1", "Привет2", "Привет3", "Привет4"];

    // Helper function to get a random phrase
    function getRandomPhrase() {
      return splashPhrases[Math.floor(Math.random() * splashPhrases.length)];
    }

    // Open menu
    function openMenu() {
      splashText.textContent = getRandomPhrase();
      menu.classList.remove("closing");
      menuOverlay.classList.remove("closing");
      menu.classList.add("open");
      menuOverlay.classList.add("open");
      document.body.classList.add("no-scroll");
    }

    // Close menu
    function closeMenu() {
      menu.classList.add("closing");
      menuOverlay.classList.add("closing");
      setTimeout(() => {
        menu.classList.remove("open");
        menuOverlay.classList.remove("open");
        setTimeout(() => {
          menu.classList.remove("closing");
          menuOverlay.classList.remove("closing");
          document.body.classList.remove("no-scroll");
        }, 100); // Дождемся завершения анимации закрытия блоков
      }, 100); // Дождемся завершения анимации затухания фона
    }

    // Event listeners
    openButton.addEventListener("click", openMenu);
    closeButton.addEventListener("click", closeMenu);
    menuTop.addEventListener("click", closeMenu);
  });

  // svg replace
  document.addEventListener("DOMContentLoaded", function () {
    const button = document.querySelector(".menu-open-button");
    const icon = button.querySelector(".menu-open-button-icon");

    const defaultIcon = `
   <path
            d="M150-240q-12.75 0-21.37-8.68-8.63-8.67-8.63-21.5 0-12.82 8.63-21.32 8.62-8.5 21.37-8.5h660q12.75 0 21.38 8.68 8.62 8.67 8.62 21.5 0 12.82-8.62 21.32-8.63 8.5-21.38 8.5H150Zm0-210q-12.75 0-21.37-8.68-8.63-8.67-8.63-21.5 0-12.82 8.63-21.32 8.62-8.5 21.37-8.5h660q12.75 0 21.38 8.68 8.62 8.67 8.62 21.5 0 12.82-8.62 21.32-8.63 8.5-21.38 8.5H150Zm0-210q-12.75 0-21.37-8.68-8.63-8.67-8.63-21.5 0-12.82 8.63-21.32 8.62-8.5 21.37-8.5h660q12.75 0 21.38 8.68 8.62 8.67 8.62 21.5 0 12.82-8.62 21.32-8.63 8.5-21.38 8.5H150Z"
          ></path>
  `;

    const hoverIcon = `
    <path
            d="M150-240q-12.75 0-21.37-8.68-8.63-8.67-8.63-21.5 0-12.82 8.63-21.32 8.62-8.5 21.37-8.5h460q12.75 0 21.38 8.68 8.62 8.67 8.62 21.5 0 12.82-8.62 21.32-8.63 8.5-21.38 8.5H150Zm627-74L630-460q-9-9-9-21t9-21l146-146q9-9 21.5-9t21.5 9q9 9 9 21.5t-9 21.5L695-481l125 125q9 9 9 21t-9 21q-9 9-21.5 9t-21.5-9ZM150-452q-12.75 0-21.37-8.68-8.63-8.67-8.63-21.5 0-12.82 8.63-21.32 8.62-8.5 21.37-8.5h340q12.75 0 21.38 8.68 8.62 8.67 8.62 21.5 0 12.82-8.62 21.32-8.63 8.5-21.38 8.5H150Zm0-208q-12.75 0-21.37-8.68-8.63-8.67-8.63-21.5 0-12.82 8.63-21.32 8.62-8.5 21.37-8.5h460q12.75 0 21.38 8.68 8.62 8.67 8.62 21.5 0 12.82-8.62 21.32-8.63 8.5-21.38 8.5H150Z"
          ></path>
  `;

    button.addEventListener("mouseenter", function () {
      icon.innerHTML = hoverIcon;
    });

    button.addEventListener("mouseleave", function () {
      icon.innerHTML = defaultIcon;
    });
  });
</script>
